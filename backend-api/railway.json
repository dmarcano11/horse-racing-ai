{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "backend-api/Dockerfile"
  },
  "deploy": {
    "startCommand": "java -jar app.jar --spring.profiles.active=prod",
    "healthcheckPath": "/api/tracks",
    "restartPolicyType": "ON_FAILURE"
  }
}